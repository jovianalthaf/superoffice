generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  bookings  Booking[]
}

model Office {
  id        Int             @id @default(autoincrement())
  title     String
  slug      String          @unique
  price     Int
  duration  String
  location  String
  rating    Float
  address   String
  image     String
  about     String
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  booking   Booking[]
  features  OfficeFeature[]
  images    OfficeImage[]
  sales     OfficeSale[]
  tags      OfficeTag[]
}

model OfficeImage {
  id       Int    @id @default(autoincrement())
  officeId Int
  imageUrl String
  office   Office @relation(fields: [officeId], references: [id])
}

model Tag {
  id      Int         @id @default(autoincrement())
  name    String      @unique
  offices OfficeTag[]
}

model OfficeTag {
  officeId Int
  tagId    Int
  office   Office @relation(fields: [officeId], references: [id], onDelete: Cascade)
  tag      Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([officeId, tagId])
}

model Feature {
  id          Int             @id @default(autoincrement())
  label       String          @unique
  description String
  icon        String
  offices     OfficeFeature[]
}

model OfficeFeature {
  officeId  Int
  featureId Int
  feature   Feature @relation(fields: [featureId], references: [id], onDelete: Cascade)
  office    Office  @relation(fields: [officeId], references: [id], onDelete: Cascade)

  @@id([officeId, featureId])
}

model Sales {
  id      Int          @id @default(autoincrement())
  name    String
  role    String
  photo   String
  offices OfficeSale[]
}

model OfficeSale {
  officeId Int
  salesId  Int
  office   Office @relation(fields: [officeId], references: [id], onDelete: Cascade)
  sales    Sales  @relation(fields: [salesId], references: [id], onDelete: Cascade)

  @@id([officeId, salesId])
}

model Booking {
  id        Int      @id @default(autoincrement())
  userId    Int
  officeId  Int
  startDate DateTime
  endDate   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  office    Office   @relation(fields: [officeId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}
